
<%= simple_form_for(@section) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :school_year %>
    <%= f.association :grade, :include_blank => false, :label_method => :grade %>
    <%= f.association :curriculum, :include_blank => false, :label_method => :name %>
    <%= f.input :room %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-my-primary' %>
  </div>
<% end %>
