
<div class="row my-row">
  <div class='col-sm-12'> 
    <div class=" my-container">
      <p id="notice"><%= notice %></p>

      <h1>Sections</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>School year</th>
            <th>Grade</th>
            <th>Curriculum</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sections.each do |section| %>
            <tr>
              <td><%= section.name %></td>
              <td><%= section.school_year %></td>
              <td><%= section.grade.grade %></td>
              <td><%= section.curriculum.name %></td>
              <td><%= link_to 'Show', section %></td>
              <td><%= link_to 'Edit', edit_section_path(section) %></td>
              <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Section', new_section_path %>
    </div>
  </div>
</div>
  