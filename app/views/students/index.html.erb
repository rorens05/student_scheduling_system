
<div class="row my-row">
  <div class='col-sm-12'> 
    <div class=" my-container">
      <p id="notice"><%= notice %></p>

      <h1>Students</h1><hr>
      <span>Import Students</span>
      <%= form_tag import_students_path, multipart: true, class: "import_form" do %>
        <%= file_field_tag :file, required: :true %>
        <%= submit_tag "import", class: 'btn btn-primary btn-sm btn-my-primary' %>
      <% end %> <hr>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Student no</th>
            <th>Grade</th>
            <th>School Year</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>

        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td><%= link_to student.name, student %></td>
              <td><%= student.student_no %></td>
              <td><%= student.grade %></td>
              <td><%= student.full_school_year %></td>
              <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-info btn-sm" %> <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
              
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Student', new_student_path, class: 'btn btn-primary btn-sm btn-my-primary'  %>     
     
    </div>
  </div>
</div>
