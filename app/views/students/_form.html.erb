
<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :student_no %>
    <%= f.input :school_year, :as => :numeric %>
    <%= f.input :grade, collection: ['8', '9', '10', '11'], include_blank: false %>
    <%= f.input :curriculum_id, collection: Curriculum.all, label_method: :name, value_method: :id, include_blank: false %>
    <%= f.input :average %>
    <%= f.input :birthday %>
    <%= f.input :address %>
    <%= f.input :contact_no %>
    <%= f.input :email %>
    <%= f.input :date_enrolled %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-my-primary' %>
  </div>
<% end %>
